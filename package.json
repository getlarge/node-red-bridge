{
  "name": "node-red-bridge",
  "version": "0.2.0",
  "description": "Node-RED running in local mode, served by Express",
  "scripts": {
    "lint": "npx eslint --ext js .",
    "start": "node node_modules/node-red/red.js -v -u .",
    "start:dev": "cp deploy/.env_development .env ; NODE_ENV=development node ./index.js",
    "start:local": "cp deploy/.env_local .env ; pm2 startOrRestart ecosystem.config.js --update-env"
  },
  "dependencies": {
    "aloes-handlers": "^1.2.1",
    "dotenv": "^7.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-basic-auth": "^1.2.0",
    "express-session": "^1.16.1",
    "localtunnel": "^1.9.1",
    "node-cleanup": "^2.1.2",
    "node-red": "^0.20.5",
    "node-red-admin": "^0.1.5",
    "node-red-dashboard": "^2.14.0",
    "node-red-node-email": "~1.4.0",
    "node-red-node-serialport": "~0.8.1"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^1.18.8",
    "prettier": "1.16.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "babel",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "parser": "babel-eslint"
    },
    "rules": {
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign": "off",
      "one-var-declaration-per-line": "off",
      "prettier/prettier": "error"
    },
    "globals": {
      "require": true
    }
  },
  "eslintIgnore": [
    "/public/",
    "/lib/uitemplates/",
    ".config.json",
    "/docs/",
    "/node_modules/"
  ],
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "jsxBracketSameLine": true,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://framagit.org/aloes/node-red-bridge.git"
  },
  "keywords": [
    "aloes",
    "iot",
    "mqtt",
    "node-red"
  ]
}
